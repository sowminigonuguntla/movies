<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.moviesapp.views.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_movieOverViewFragment"
            app:destination="@id/movieOverViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.moviesapp.views.fragments.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.moviesapp.views.fragments.FavouritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favourites">

    </fragment>

    <fragment
        android:id="@+id/movieOverViewFragment"
        android:name="com.example.moviesapp.views.fragments.MovieOverViewFragment"
        android:label="MovieOverViewFragment"
        tools:layout="@layout/fragment_movie_over_view">

    <argument
        android:name="movieTitle"
        app:argType="string"
        android:defaultValue="Movie Title" />
    <argument
        android:name="moviePoster"
        app:argType="string" />
    <argument
        android:name="description"
        app:argType="string" />
    <argument
        android:name="adult"
        app:argType="string"
        android:defaultValue="18+" />
    <argument
        android:name="releaseyear"
        app:argType="string"
        android:defaultValue="2021" />
    <argument
        android:name="rating"
        android:defaultValue="5.1" />
        <argument
            android:name="originalLanguage"
            android:defaultValue="English"/>
        <action
            android:id="@+id/action_movieOverViewFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
    </fragment>


</navigation>